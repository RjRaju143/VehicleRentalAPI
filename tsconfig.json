{
  "compilerOptions": {
    "outDir": "build",
    "sourceMap": true,
    "target": "ES2015",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./*.js",
    "src/**/*.ts",
  ],
  "exclude": [
    "__test__/**/*.ts",
  ]
}